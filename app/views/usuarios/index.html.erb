<div class="layout-content">
  <div class="layout-content-body">
    <div class="title-bar">
      <h1 class="title-bar-title">
              <span class="d-ib">Usuarios del sistema

              </span>

      </h1>
      <p class="title-bar-description">
        <small>Mediante este panel puedes agregar y editar usuarios de la plataforma.</small>
      </p>
    </div>
    <div class="row gutter-xs">
      <div class="col-md-5">
        <div class="row gutter-xs">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header bg-primary">
                <small>Usuarios del sistema </small>
              </div>
              <div class="card-body">
                <ul class="media-list"><% Usuario.all().order("apellido").each do |usuario| %>
                  <li class="media">
                    <div class="media-middle media-left">
                      <a href="#">
<!--
                        <img class="img-circle" width="40" height="40" src="img/0299419341.jpg" alt="Harry Jones">
-->
                      </a>
                    </div>
                    <div class="media-middle media-body">
                      <h5 class="m-y-0"><%= usuario.nombre %> <%= usuario.apellido %></h5>
                      <small><%= usuario.rol %></small>
                    </div>
                    <div class="media-middle media-right">
                      <a href="/usuarios/<%= usuario.id %>" class="btn btn-outline-primary btn-sm">Editar</a>
                    </div>
                  </li><%end%>
                </ul>
              </div>
            </div>
          </div>
        </div>

      </div>
      <div class="col-md-7">
        <div class="demo-form-wrapper">

          <%= form_for @usuario_nuevo, url: {action: "create"},html:{:class=>"form form-horizontal"} do |f| %>
            <div class="form-group">

              <%= f.label :nombre,{:class=>"col-sm-3 control-label"} %>
              <div class="col-sm-9">
                <%= f.text_field :nombre,{:class=>"form-control"} %>

              </div>
            </div>
            <div class="form-group">
              <%= f.label :apellido,{:class=>"col-sm-3 control-label"} %>

              <div class="col-sm-9">
                <%= f.text_field :apellido,{:class=>"form-control"} %>
              </div>
            </div>
            <div class="form-group" style="display: none">
              <label class="col-sm-3 control-label" for="form-control-1">Rut</label>
              <div class="col-sm-9">
                <%= f.text_field :rut,{:class=>"form-control"} %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label" for="form-control-1">E-mail</label>
              <div class="col-sm-9">
                <%= f.text_field :email,{:class=>"form-control"} %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label" for="form-control-2">Contrase√±a</label>
              <div class="col-sm-9">
                <%= f.password_field :passwd,{:class=>"form-control"} %>
              </div>
            </div>



            <div class="form-group">
              <label class="col-sm-3 control-label" for="form-control-6">Rol</label>
              <div class="col-sm-9">

                <%= f.select("roles_id",Rol.all.map { |rol| [ rol.nombre,rol.id] }, {prompt: 'Seleccione rol'},{:class=>"form-control"}) %>

              </div>
            </div>

            <div class="form-group">

              <%= f.submit "Crear usuario",{:class=>"btn btn-primary btn-block btn-next"} %>
            </div>


        <%end%>
        </div>

      </div>

    </div>


  </div>
</div>